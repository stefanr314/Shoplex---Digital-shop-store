<%- include('../includes/head.ejs') %>
    <style>
      body,
      html {
        height: 100%;
        margin: 0;
        background-image: url("/images/hero3.jpg");
        background-size: cover;
        background-position: center;
        position: relative;
        z-index: -1;
      }

      .form-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      }

      .form-header {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
      }

      .form-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }

      .form-label {
        font-weight: bold;
        color: #333;
      }

      .form-control-plaintext {
        background-color: #fff;
        border: none;
        color: #333;
        font-size: 1.1rem;
      }

      .btn-reset {
        background-color: #313532;
        border-color: #232323;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        text-align: center;
        border-radius: 5px;
        text-decoration: none;
        display: block;
        margin: 0 auto;
        width: fit-content;
      }

      .btn-reset:hover {
        background-color: #0c0d0c;
        border-color: #2a2b2a;
      }
    </style>
  </head>

  <body>
    <%- include('../includes/navbar.ejs') %>

    <div class="container h-100">
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-10">
          <div class="form-container">
            <h2 class="form-header">User Information</h2>
            <div class="form-row">
              <div class="col-md-6">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  id="name"
                  class="form-control-plaintext"
                  readonly
                  value="<%= name %>"
                />
              </div>
              <div class="col-md-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input
                  type="text"
                  id="lastName"
                  class="form-control-plaintext"
                  readonly
                  value="<%= lastName %>"
                />
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-12">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  id="email"
                  class="form-control-plaintext"
                  readonly
                  value="<%= email %>"
                />
              </div>
            </div>
            <a href="/reset" class="btn-reset">Reset Password</a>
          </div>
        </div>
      </div>
    </div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<%- include('../includes/end.ejs') %>
